# ==============================================================================
# ARCHIVO DE EJEMPLO DE VARIABLES DE ENTORNO
# ==============================================================================
# Copiar este archivo como .env y llenar con valores reales
# NUNCA subir el archivo .env al repositorio (está en .gitignore)
# ==============================================================================

# ==============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ==============================================================================
APP_NAME=wine-quality-prediction
APP_ENV=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=True  # Solo en desarrollo

# ==============================================================================
# STREAMLIT CONFIGURATION
# ==============================================================================
STREAMLIT_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# ==============================================================================
# MODELO Y DATOS
# ==============================================================================
MODEL_VERSION=v1.0.0
MODEL_PATH=./models/best_model.joblib
PREPROCESSOR_PATH=./data/preprocessor.joblib
DATA_PATH=./Base_de_datos.csv

# ==============================================================================
# THRESHOLDS DE MONITOREO
# ==============================================================================
DRIFT_KS_THRESHOLD=0.3
DRIFT_PSI_THRESHOLD=0.2
DRIFT_JSD_THRESHOLD=0.15
DRIFT_CHI2_PVALUE=0.05

# ==============================================================================
# MLFLOW (OPCIONAL)
# ==============================================================================
# MLFLOW_TRACKING_URI=http://localhost:5000
# MLFLOW_EXPERIMENT_NAME=wine-quality-prediction

# ==============================================================================
# SONARCLOUD (OPCIONAL)
# ==============================================================================
# SONAR_TOKEN=your_sonarcloud_token_here
# SONAR_PROJECT_KEY=marlonvallejo_ProyectoML
# SONAR_ORGANIZATION=marlonvallejo

# ==============================================================================
# DATABASE (SI SE USA EN PRODUCCIÓN)
